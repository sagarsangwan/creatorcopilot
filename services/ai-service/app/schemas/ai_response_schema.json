{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["visuals", "platforms"],
  "properties": {
    "visuals": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["slide_index", "headline", "subtext"],
        "properties": {
          "slide_index": {
            "type": "integer",
            "minimum": 0
          },
          "headline": {
            "type": "string",
            "maxLength": 40
          },
          "subtext": {
            "type": "string",
            "maxLength": 80
          }
        }
      }
    },
    "platforms": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["text", "metadata"],
        "properties": {
          "text": {
            "type": "string"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "hashtags": {
                "type": "array",
                "items": { "type": "string" }
              },
              "first_comment": {
                "type": "string"
              },
              "cta": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      }
    }
  }
}
